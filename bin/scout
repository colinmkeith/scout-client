#!/usr/bin/env ruby
# encoding: utf-8

#$KCODE   = "u"  # -Ku

# Customized for including libraries bundled in the scoutd package (system_metrics and elif)
Dir.glob(File.join(File.dirname(__FILE__), *%w[.. .. *])).each do |dir|
  $LOAD_PATH.unshift(File.join(dir,"lib"))
end

require "scout"

Scout::Command.dispatch(ARGV)
