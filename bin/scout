#!/usr/bin/env ruby
# encoding: utf-8

#$KCODE   = "u"  # -Ku

# Put our own scout-client load path at the very beginning of Ruby's load path
$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), *%w[.. lib]))

# Add the load path for required libraries whose dependencies might be already resolved by rubygems
# Needed for running standalone. E.g. under scoutd
Dir.glob(File.join(File.dirname(__FILE__), *%w[.. scoutd_vendor *])).each do |dir|
  $LOAD_PATH << File.join(dir,"lib")
end

require "scout"

Scout::Command.dispatch(ARGV)
